{
   "manifest_version": 2,
   "name": "Read on reMarkable",
   "version": "1.2.0.1",

   "description": "Read web articles on your reMarkable with a click.",

   "options_ui": {
      "page": "options.html",
      "open_in_tab": true
   },

   "applications": {
      "gecko": {
         "id": "remarkable@dorsaz.net"
      }
   },

   "icons": {
      "128": "icons/128.png",
      "16": "icons/16.png",
      "256": "icons/256.png",
      "48": "icons/48.png"
   },

   "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Read the current page on your reMarkable account."
   },

   "background": {
      "page": "background.html"
   },

   "permissions": [
      "activeTab",
      "contextMenus",
      "storage",
      "https://webapp-production-dot-remarkable-production.appspot.com/",
      "https://internal.cloud.remarkable.com/"
   ]
}
